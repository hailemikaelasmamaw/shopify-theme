<header class="header-nav">
    <div class="logo-container">
      {% comment %} <h1>{{ shop.name }}</h1> {% endcomment %}
      <a href="/">
        <img
          width="80"
          height="50"
          loading="lazy"
          src="{{ 'nike.png' | asset_url }}"
        >
      </a>
    </div>
  
    <div class="nav-container">
      <button class="mobile-menu-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <ul class="middle-nav-links">
        {% for link in linklists['main-menu'].links -%}
          <li>{{ link.title | link_to: link.url }}</li>
        {%- endfor %}
      </ul>
    </div>
  
    <div class="right-nav-items">
      <form action="/search" class="search-form">
        <input class="search-nav" placeholder="search" type="search">
      </form>
  
      <a href="/cart" class="cart-link">
        <img
          class="shopping-img"
          width="40"
          height="40"
          loading="lazy"
          src="{{ 'd.png' | asset_url }}"
        >
      </a>
    </div>
  </header>
  
  <style>
    .shopping-img {
      cursor: pointer;
      margin-bottom: 10px;
    }
    .header-nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 0;
      padding: 1px;
      background-color: white;
      padding: 0 30px 0 30px;
    }
  
    .middle-nav-links {
      display: flex;
      font-size: 17px;
      font-weight: bold;
    }
  
    .middle-nav-links li {
      list-style-type: none;
      padding: 10px;
    }
  
    .middle-nav-links li:hover {
      text-decoration: underline;
    }
  
    .middle-nav-links a {
      text-decoration: none;
      color: inherit;
    }
  
    .right-nav-items {
      display: flex;
      align-items: center;
    }
    .search-nav {
      padding: 10px;
      margin-top: 10px;
      border-radius: 15px;
      border: none;
      background-color: rgb(239, 234, 234);
    }

    .mobile-menu-toggle {
      display: none;
      background: none;
      border: none;
      cursor: pointer;
      padding: 5px;
      flex-direction: column;
      justify-content: space-between;
      height: 24px;
    }

    .mobile-menu-toggle span {
      display: block;
      width: 25px;
      height: 3px;
      background-color: #000;
      transition: all 0.3s ease;
    }

    /* Media Queries for Responsive Design */
    @media screen and (max-width: 768px) {
      .header-nav {
        padding: 0 15px;
        position: relative;
      }

      .mobile-menu-toggle {
        display: flex;
        margin-right: 10px;
      }

      .nav-container {
        order: 2;
        flex: 1;
        display: flex;
        justify-content: flex-end;
      }

      .middle-nav-links {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background-color: white;
        flex-direction: column;
        padding: 0;
        margin: 0;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease;
        z-index: 100;
        box-shadow: 0 5px 10px rgba(0,0,0,0.1);
      }

      .middle-nav-links.active {
        max-height: 300px;
      }

      .middle-nav-links li {
        width: 100%;
        text-align: center;
        padding: 15px;
        border-bottom: 1px solid #eee;
      }

      .search-form {
        display: none;
      }

      .logo-container {
        order: 1;
        flex: 1;
      }

      .right-nav-items {
        order: 3;
        justify-content: flex-end;
      }
    }

    @media screen and (max-width: 480px) {
      .header-nav {
        padding: 0 10px;
      }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const menuToggle = document.querySelector('.mobile-menu-toggle');
      const navLinks = document.querySelector('.middle-nav-links');
      
      menuToggle.addEventListener('click', function() {
        navLinks.classList.toggle('active');
      });
    });
  </script>