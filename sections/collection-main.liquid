        "id": "show_cart_note",
        "label": "Show Cart Note",
        "default": true
        },
        {
        "type": "range",
        "id": "collection_page_size",
        "label": "Products per page",
        "min": 4,
        "max": 24,
        "step": 4,
        "default": 8
        }
    ],
    "presets": [
        {
        "name": "Default",
        "category": "Collection"
        }
    ]
    }
    {% endschema %}

