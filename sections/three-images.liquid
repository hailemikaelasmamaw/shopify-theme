<section>

    <div class="three-images-wrapper">
        {% if section.settings.image != blank %}
            <div class="one-user">
                <h1></h1>
            </div>
        {% else %}
            <div class="one">
                <h1></h1>
            </div>
        {% endif %}

        {% if section.settings.image2 != blank %}
            <div class="two-user">
                <h1></h1>
            </div>
        {% else %}
            <div class="two">
                <h1></h1>
            </div>
        {% endif %}

        {% if section.settings.image3 != blank %}
            <div class="three-user">
                <h1></h1>
            </div>
        {% else %}
            <div class="three">
                <h1></h1>
            </div>
        {% endif %}

    </div>

</section>
<style>
    .three-images-wrapper{
        display: flex; 
    }

    .one, .one-user, .two, .two-user, .three, .three-user {
        width: 33.3333%;
        height: 500px;
        background-size: cover;
        background-position: center;
    }

    .one {
        background-image : url("{{ 'one.png' | asset_url }}");
    }
    .one-user {
        background-image : url("{{ section.settings.image | image_url }}");
    }
    .two {
        background-image : url("{{ 'two.png' | asset_url }}");
    }
    .two-user {
        background-image : url("{{ section.settings.image2 | image_url }}");
    }
    .three {
        background-image : url("{{ 'three.png' | asset_url }}");
    }
    .three-user {
        background-image : url("{{ section.settings.image3 | image_url }}");
    }

    @media screen and (max-width: 768px) {
        .three-images-wrapper {
            flex-direction: column;
        }
        
        .one, .one-user, .two, .two-user, .three, .three-user {
            width: 100%;
            height: 250px;
        }
    }
</style>


{% schema %}
{
    "name": "three-images",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "image",
            "info": "400 x 120px .pmg recommended"
        },
        {
            "type": "image_picker",
            "id": "image2",
            "label": "image2",
            "info": "400 x 120px .pmg recommended"
        },
        {
            "type": "image_picker",
            "id": "image3",
            "label": "image3",
            "info": "400 x 120px .pmg recommended"
        }
    ],
    "blocks": [],
    "presets": [
        {
            "name": "three-images"
        }
    ]
}
{% endschema %}