    {
    "name": "all-products",
    "settings": [
    {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#F4F4F4"
    },
    {
        "type": "color",
        "id": "text_color",
        "label": "Text",
        "default": "#000000"
    }
    ],
    "presets": [
    {
        "name": "all-products"
    }
    ]
    }
{% endschema %}