<section class="all-products">
    <h1>{{ collections['best-selling'].title }}</h1>
    <div class="product-container">
        <div class="all-products-wrapper">
            {% for product in collections['best-selling'].products %}
                <div class="product-card">
                <img
                class="product-image"
                width="300"
                height="300"
                loading="lazy"
                src="{{ product.featured_image | image_url}}"
                >
                <h3>{{- product.title | link_to: product.url }}</h3>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
    .all-products {
        background: {{ section.settings.background }};
        color: {{ section.settings.text_color }};
        padding: 20px;
        width: 100%;
        max-width: 100%;
    }

    .all-products h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    .all-products-wrapper {
        display: flex;
        transition: transform 0.3s ease;
        gap: 20px;
    }

    .product-container {
        position: relative;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none; /* Firefox */
    }

    .product-container::-webkit-scrollbar {
        display: none; /* Chrome, Safari, Edge */
    }

    .product-card {
        padding: 15px;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        flex: 0 0 auto;
        width: 300px;
        transition: transform 0.2s ease;
    }

    .product-card:hover {
        transform: translateY(-5px);
    }

    .product-image {
        width: 100%;
        height: auto;
        max-width: 300px;
        max-height: 300px;
        object-fit: cover;
    }

    .product-card h3 {
        margin-top: 10px;
        text-align: center;
    }

    .product-card h3 a {
        color: black;
        text-decoration: none;
    }

    .product-card a:hover {
        text-decoration: underline;
    }

    /* Mobile styles */
    @media screen and (max-width: 768px) {
        .all-products {
            padding: 10px;
        }

        .all-products-wrapper {
            gap: 10px;
        }

        .product-card {
            width: 180px;
            padding: 10px;
        }

        .product-image {
            max-width: 160px;
            max-height: 160px;
        }

        .product-card h3 {
            font-size: 0.9em;
        }
    }

    /* Small mobile styles */
    @media screen and (max-width: 480px) {
        .product-card {
            width: 150px;
        }

        .product-image {
            max-width: 130px;
            max-height: 130px;
        }

        .product-card h3 {
            font-size: 0.8em;
        }
    }
</style>

{% comment %}
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const wrapper = document.querySelector('.all-collections-wrapper');
        const scrollLeftButton = document.querySelector('.scroll-left');
        const scrollRightButton = document.querySelector('.scroll-right');

        scrollLeftButton.addEventListener('click', function () {
        wrapper.scrollBy({
            left: -300, // Adjust based on your card width
            behavior: 'smooth',
        });
        });

        scrollRightButton.addEventListener('click', function () {
        wrapper.scrollBy({
            left: 300, // Adjust based on your card width
            behavior: 'smooth',
        });
        });
    });
    </script>
{% endcomment %}

