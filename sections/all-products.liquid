<section class="all-collections">

    <h1>Featured collections</h1>
    <div class="collection-container">
        <div class="collection-wrapper"> 
            {%for collection in collection %}

                <h3> {{ collection.title | link_to: collection.url }}</h3>
            {% endfor %}

        </div>
    </div>

</section>


{% schema %}
{
    "name" : "all-products",
    "settings" : [
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#F4F4F4"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text",
            "default": "#000000"
        }
    ],
    "presets" : [
        {
            "name" : "all-products"
        }
    ]
}

{% endschema %}