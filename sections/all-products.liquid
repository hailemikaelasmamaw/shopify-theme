<section class="all-products">

    <h1>Featured products</h1>
    <div class="products-container">
        <div class="products-wrapper"> 
            {%for products in product %}

                <h3> {{ product.title | link_to: product.url }}</h3>
            {% endfor %}

        </div>
    </div>

</section>


{% schema %}
{
    "name" : "all-products",
    "settings" : [
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#F4F4F4"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text",
            "default": "#000000"
        }
    ],
    "presets" : [
        {
            "name" : "all-products"
        }
    ]
}

{% endschema %}