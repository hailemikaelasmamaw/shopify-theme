<div class="cart-code" space-y-6>
    {% for item in cart.items %}
        <div class="card-item flex items-center justify-between border-b border-gray-200 pb-4">
            <div class="flex items-center gap-4">
                <img src="{{ item.image | image_url: width: 100 }}" alt="{{ item.product.title }}" class="w-16 h-16 object-cover rounded-md" width="100" height="100">
                <div>
                    <p class="font-semibold">{{ item.product.title }}</p>
                    {% if item.variant.title != item.product.title %}
                    <p class="text-sm text-gray-500">{{ item.variant.title }}</p>
                    {% endif %}
                </div>
                
            </div>
            <div class="flex items-center gap-3">
                <input
                    type="number"
                    class="cart-quantity-input w-16 text-center border border-gray-300 rounded-md"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="1"
                    data-id="{{ item.id}}"
                    
                >
                <button class="cart-remove-button" data-id="{{ item.id }}"
                    class="cart-remove-btn text-red-500 underline text-sm hover:text-red-600">
                    Remove
                </button>
            </div>
        </div>
    {% else %}
        <p class="text-center text-gray-500">Your cart is empty</p>
    {% endfor %}
</div>

<script src="{{ 'cart.js' | asset_url }}" defer></script>
<div class="cart-total-price mt-8">
    <p class="text-lg font-semibold">Total: <span class="cart-total-price-value">{{ cart.total_price | money }}</span>
</p>
</div>


