<div class="contact-us-form max-w-5xl mx-auto p-6 bg-white rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold mb-4">{{ section.settings.heading }}</h2>

    <form action="/contact#contact_form" method="post" enctype="multipart/form-data" class="space-y-4">
        <input type="hidden" name="form_type" value="contact">
        <input type="hidden" name="utf8" value="âœ“">

        <input class="w-full p-3 border rounded" type="text" name="contact[name]" placeholder="Your Name" required>
        <input class="w-full p-3 border rounded" type="email" name="contact[email]" placeholder="Your Email" required>
        <textarea class="w-full p-3 border rounded" name="contact[body]" placeholder="Your Message" rows="6" required></textarea>

        {% if section.settings.show_phone %}
            <input class="w-full p-3 border rounded" type="tel" name="contact[phone]" placeholder="Your Phone Number">
        {% endif %}

        <button type="submit" class="w-full p-3 bg-blue-600 text-white rounded hover:bg-blue-700">
            {{ section.settings.button_text }}
        </button>
    </form>
</div>

{% schema %}
{
    "name": "Contact Form",
    "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Form Heading",
        "default": "Get in Touch"
    },
    {
        "type": "checkbox",
        "id": "show_phone",
        "label": "Include Phone Number?",
        "default": false
    },
    {
        "type": "text",
        "id": "phone_placeholder",
        "label": "Phone Number Placeholder",
        "default": "Your Phone Number"
    },
    {
        "type": "text",
        "id": "button_text",
        "label": "Submit Button Text",
        "default": "Send Message"
    }
    ],
    "presets": [
    {
        "name": "Default",
        "category": "Contact"
    }
    ]
}
{% endschema %}
