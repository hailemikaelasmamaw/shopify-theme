{% comment %}
  About Us Section
{% endcomment %}

<section class="about-us-section px-6 py-12 max-w-5xl mx-auto text-center" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
    
    <h2 class="text-3xl font-bold mb-6">
        {{ section.settings.heading }}
    </h2>

    {% if section.settings.show_image and section.settings.about_image %}
        <img 
            src="{{ section.settings.about_image | image_url: width: 1000 }}" 
            alt="About us image" 
            class="mx-auto mb-6 rounded-lg shadow-lg"
            width="100"
            height="100"
        />
    {% endif %}

    <div class="text-lg leading-relaxed mb-8">
        {{ section.settings.content }}
    </div>

    {% if section.settings.show_cta %}
        <a href="{{ section.settings.cta_link }}" class="inline-block bg-black text-white px-6 py-3 rounded-full hover:bg-gray-800 transition">
            {{ section.settings.cta_text }}
        </a>
    {% endif %}
</section>

{% schema %}
{
  "name": "About Us Section",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Who We Are"
    },
    {
        "type": "richtext",
        "id": "content",
        "label": "About Us Content",
        "default": "<p>We are a passionate team dedicated to delivering value through exceptional service and innovation.</p>"
    },
    {
        "type": "image_picker",
        "id": "about_image",
        "label": "Image"
    },
    {
        "type": "checkbox",
        "id": "show_image",
        "label": "Show Image?",
        "default": true
    },
    {
        "type": "checkbox",
        "id": "show_cta",
        "label": "Show Call To Action Button?",
        "default": true
    },
    {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#ffffff"
    },
    {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#333333"
    },
    {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Button Text",
        "default": "Learn More"
    },
    {
        "type": "url",
        "id": "cta_link",
        "label": "CTA Link",
        "default": "/pages/contact"
    }
  ],
  "presets": [
    {
        "name": "About Us"
    }
  ]
}
{% endschema %}
