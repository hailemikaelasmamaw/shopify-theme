<div class="custom-contact-form max-w-5xl mx-auto p-6 bg-white rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold mb-4">{{ section.settings.heading }}</h2>
    

    <form action="/contact#contact_form" method="post" enctype="multipart/form-data" class="space-y-4">
        <input type="hidden" name="form_type" value="contact">
        <input type="hidden" name="utf8" value="âœ“">

        <div class="mb-6">
            <input class="w-full p-3 border rounded" type="text" name="contact[name]" placeholder=" Name" required>
        </div>
        <div class="mb-6">
            <input class="w-full p-3 border rounded" type="email" name="contact[email]" placeholder="Email *" required>
        </div>
          <div class="mb-6">
            <input class="w-full p-3 border rounded" type="number" name="contact[phone]" placeholder="Phone Number" required>
        </div>
        <div class="mb-4">
            <textarea class="w-full p-3 border rounded" name="contact[body]" placeholder="Your Message" rows="6" required></textarea>
            <button type="submit" class="w-full p-3 bg-blue-600 text-white rounded hover:bg-blue-700">
            {{ section.settings.button_text }}
        </button>
        </div>
        
    </form>
    {% render 'contact-details' %}
</div>

{% schema %}
{
  "name": "Custom Contact Form",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Form Heading",
      "default": "Contact Us"
    },
    {
      "type": "checkbox",
      "id": "show_phone",
      "label": "Include Phone Number Field?",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_subject",
      "label": "Include Subject Field?",
      "default": false
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Submit Button Text",
      "default": "Send Message"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": " Button Color",
      "default": "#007bff"
    },
    {
      "type" : "color",
      "id": "button_hover_color",
      "label": " Button Hover Color",
      "default": "#0056b3"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Contact"
    }
  ]
}
{% endschema %}
