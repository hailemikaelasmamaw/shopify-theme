{%- if section.settings.show_announcement -%}
    <section>
        <div class="announcement-bar">
        <div class="announcement-bar-left-section">
            {%- if section.settings.image2 != blank -%}
            <img
                width="40"
                height="40"
                loading="lazy"
                src="{{ section.settings.image2 | image_url }}"
            >
            {%- else -%}
            <img
                width="40"
                height="40"
                loading="lazy"
                src="{{ 'a.png' | asset_url }}"
            >
            {%- endif -%}
            {%- if section.settings.image != blank -%}
            <img
                width="35"
                height="35"
                loading="lazy"
                src="{{ section.settings.image | image_url }}"
            >
            {%- else -%}
            <img
                width="35"
                height="35"
                loading="lazy"
                src="{{ 'b.png' | asset_url }}"
            >
            {%- endif -%}
        </div>
        <div class="announcement-bar-center-section">
            {% for block in section.blocks %}
                {% if block.type == 'announcement_text' %}
                    <p>{{ block.settings.text | escape }}</p>
                {% endif %}
            {% endfor %}
            
        </div>
        <div class="announcement-bar-right-section">
            <ul class="announcement-bar-inner-list">
            {%- if section.blocks.size == 0 -%}
                <li>
                <a href="#">Help</a>
                </li>

                {% if shop.customer_accounts_enabled %}
                {% if customer %}
                    <li>
                    <a href="/account">Account</a>
                    </li>

                {% else %}
                    <li>
                    <a href="/account/login">Sign in</a>
                    </li>
                {% endif %}

            {%- else -%}
                {% for block in section.blocks %}
                <li>
                    <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
                </li>
                {% endfor %}
            {%- endif -%}
            </ul>
        </div>
        </div>
    </section>

    <style>
        .announcement-bar {
        background: {{ section.settings.background }}
        ;
        color: {{ section.settings.text_color }}
        ;
        }

    </style>

    <script></script>
    {%- endif -%}

{% schema %}
    {
    "name": "Announcement bar",
    "class": "announcement-bar",
    "enabled_on": {},
    "settings": [
    {
        "type": "checkbox",
        "id": "show_announcement",
        "label": "Show announcement",
        "default": true
    },
    {
        "type": "image_picker",
        "id": "image",
        "label": "image",
        "info": "400 x 120px .png recommended"
    },
    {
        "type": "image_picker",
        "id": "image2",
        "label": "image2",
        "info": "400 x 120px .png recommended"
    },
    {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#FFFFFF"
    },
    {
        "type": "color",
        "id": "text_color",
        "label": "Text",
        "default": "#FFFFFF"
    }
    ],
    "blocks": [
    {
        "type": "announcement_text",
        "name": "Announcement Text",
        "settings": [
        {
            "type": "text",
            "id": "text",
            "default": "Free Shipping on All Jewelry Orders.",
            "label": "text"
        }
        ]
    }
    ],
    "presets": [
    {
        "name": "Announcement Bar",
        "blocks": [
        {
            "type": "announcement"
        }
        ]
    }
    ]
}
{% endschema %}