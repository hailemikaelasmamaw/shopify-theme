<footer class="footer-main">
    <div class="footer-sec-1">
        {%- if section.block.size == 0 -%}
            <div>
                <p>Guides</p>
                <p>Terms of Sale</p>
                <p>Terms of Use</p>
                <p>Privacy Policy</p>
            </div>
            <div>
                <p>Guides</p>
                <p>Terms of Sale</p>
                <p>Terms of Use</p>
                <p>Privacy Policy</p>
            </div>
        {% else %}
            {% for block in section.block %}
                <div>
                    <li>
                        <a href="{{ block.setting.link }}">{{ block.settings.text | escape }}</a>
                    </li>
                    <li>
                        <a href="{{ block.setting.link }}">{{ block.settings.text | escape }}</a>
                    </li>
                    <li>
                        <a href="{{ block.setting.link }}">{{ block.settings.text | escape }}</a>
                    </li>
                    <li>
                        <a href="{{ block.setting.link }}">{{ block.settings.text | escape }}</a>
                    </li>
                </div>
            {% endfor %}
        {% endif %}
    </div>
    <div class="footer-sec-2">
        <p>Guides</p>
        <p>Terms of Sale</p>
        <p>Terms of Use</p>
        <p>Privacy Policy</p>
    </div>

</footer>

<style>
    .footer-main {
        background: {{ section.settings.background }};
        color: {{ section.settings.text_color }};
        padding: 10px;
    }
    .footer-sec-1{
        margin-top: 20px;
        display: flex;
        justify-content: space-around;
    
    }
    .footer-sec-2{
        display: flex;
    }
    .footer-sec-2 p{
        padding : 10px;
    }
    
</style>

{% schema %}
{
    "name" : "footer",
    "settings" : [
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#F4F4F4"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text",
            "default": "#000000"
        }
    ],
    "presets" : [
        {
            "name" : "footer"
        }
    ]
}

{% endschema %}